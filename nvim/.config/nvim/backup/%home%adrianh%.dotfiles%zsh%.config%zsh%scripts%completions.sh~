# Ensure compinit is loaded
autoload -Uz compinit
compinit -i

# Generic completion function for directory navigation
_dir_completion() {
    local base_dir="$1"
    shift
    
    local -a subdirs
    subdirs=("$base_dir"/*(/:t))
    _describe 'directory' subdirs
}

gym ()
{
    cd ~/Documents/GymThun/"$1" || exit
}

conf ()
{
    cd ~/.config/"$1" || exit
}

dot ()
{
    cd ~/.dotfiles/"$1" || exit
}

# Register completions
compdef '_dir_completion ~/.config' conf
compdef '_dir_completion ~/.dotfiles' dot
compdef '_dir_completion ~/Documents/GymThun' gym
