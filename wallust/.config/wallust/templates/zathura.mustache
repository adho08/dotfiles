# Colors
set default-bg                  "{{background}}"
set default-fg                  "{{foreground}}"

set statusbar-bg                "{{color8}}"
set statusbar-fg                "{{color7}}"

set inputbar-bg                 "{{background}}"
set inputbar-fg                 "{{foreground}}"

set notification-bg             "{{background}}"
set notification-fg             "{{foreground}}"

set notification-error-bg       "{{background}}"
set notification-error-fg       "{{color1}}"

set notification-warning-bg     "{{background}}"
set notification-warning-fg     "{{color1}}"

set highlight-color             "rgba({{foreground | rgb}}, 0.3)"
set highlight-active-color      "rgba({{foreground | rgb}}, 0.8)"

set completion-bg               "{{background}}"
set completion-fg               "{{foreground}}"

set completion-group-bg     	"{{background}}"
set completion-group-fg     	"{{foreground}}"

set completion-highlight-bg     "{{color13}}"
set completion-highlight-fg     "{{foreground}}"

set recolor                     "false"
set recolor-keephue             "false"

